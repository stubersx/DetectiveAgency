@model Employee
@{
    ViewData["Title"] = "New Employee Form";
}

<div class="row">
    <h2 class="col-12">New Employee Form</h2>
</div>
<div class="row">
    <form asp-action="Index" asp-controller="Home" method="post" class="col-12">
        <div>
            <label asp-for="Id" class="col-md-3">ID:</label>
            <input asp-for="Id" class="col-md-6" />
            <span asp-validation-for="Id" class="text-danger"></span>
        </div>
        <div>
            <label asp-for="Name" class="col-md-3">Name:</label>
            <input asp-for="Name" class="col-md-6" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div>
            <label asp-for="Hours" class="col-md-3">Hours:</label>
            <input asp-for="Hours" class="col-md-6" />
            <span asp-validation-for="Hours" class="text-danger"></span>
        </div>
        <div>
            <label asp-for="Rate" class="col-md-3">Rate:</label>
            <input asp-for="Rate" class="col-md-6" />
            <span asp-validation-for="Rate" class="text-danger"></span>
        </div>
        <div>
            <label class="col-md-3">Weekly Gross Pay:</label>
            <input value="@ViewBag.Salary.ToString("C2")" readonly class="col-md-6"></input>
        </div>
        <button asp-action="CalcPay" asp-controller="Home" type="submit">Calculate Gross Pay</button>
        <button asp-action="Index" asp-controller="Home">Clear</button>
    </form>
</div>
